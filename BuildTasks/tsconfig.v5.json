{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2022",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "./Common/Common.ts",
    "./Common/uuidv5.d.ts",
    "./Common-Auth/CommonAuth.ts"
  ],
  "exclude": [
    "*/**/*.js"
  ]
}
