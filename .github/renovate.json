{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "azure-pipelines": {
    "enabled": true
  },
  "packageRules": [
    {
      "packageNames": [
        "azure-pipelines-task-lib",
        "@types/node"
      ],
      "updateTypes": ["major"],
      "enabled": false
    },
    {
      "packageNames": [
        "@types/fs-extra"
      ],
      "matchPaths": ["BuildTasks/*/v3/**/package.json"],
      "updateTypes": ["major"],
      "enabled": false
    },
    {
      "matchDatasources": ["azure-pipelines-tasks"],
      "extractVersion": "^(?<version>\\d+)"
    }
  ]
}
